# =========================================================================
# Mysore Mess Menus - Environment Variables
# =========================================================================
# Copy this file to .env.local and fill in your values
# 
# ⚠️  IMPORTANT: Never commit .env.local or any file with real credentials!
# =========================================================================

# =========================================================================
# SUPABASE CONFIGURATION
# =========================================================================
# Get these from https://supabase.com/dashboard → Your Project → Settings → API

NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# =========================================================================
# CLERK AUTHENTICATION
# =========================================================================
# Get these from https://dashboard.clerk.com → Your App → API Keys

# Core Clerk API Keys
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_publishable_key
CLERK_SECRET_KEY=sk_test_your_secret_key

# Clerk Authentication Flow URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/onboarding

# Clerk Webhook Secret (for syncing users to Supabase)
# Get from Clerk Dashboard → Webhooks → Add Endpoint → Signing Secret
CLERK_WEBHOOK_SECRET=whsec_your_webhook_secret

# =========================================================================
# OCR SERVICES
# =========================================================================

# OCR.Space API Key
# Get from https://ocr.space/OCRAPI
OCRSPACE_API_KEY=your_ocrspace_api_key

# Google Gemini API (for enhanced menu parsing)
# Get from https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key

# GROQ API (alternative AI service)
# Get from https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key

# Modal OCR Endpoint (optional - for custom OCR deployment)
MODAL_OCR_ENDPOINT=your_modal_endpoint_url

# =========================================================================
# RATE LIMITING (Upstash Redis)
# =========================================================================
# Get from https://console.upstash.com → Create Database → REST API

UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# =========================================================================
# NEXT.JS CONFIGURATION
# =========================================================================

NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your_random_secret_string_here

# =========================================================================
# DEBUG CONFIGURATION (Development Only)
# =========================================================================
# Set to false in production

NEXT_PUBLIC_DEBUG=false
NEXT_PUBLIC_LOG_LEVEL=ERROR
